{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "metadata": {
                "description": "Name of the resourceGroup to create"
            }
        },
        "rgLocation": {
            "type": "string",
            "metadata": {
                "description": "Location for the resourceGroup"
            }
        },
        "powerStigVersion": {
            "type": "string",
            "metadata": {
                "description": "Version of PowerSTIG to use. Previous default was 4.7.1"
            },
            "defaultValue": "4.13.1"
        }
    },
    "functions": [],
    "variables": {
        "workspaceUrl": "[uri(deployment().properties.templateLink.uri, '../nested/workspace.json')]",
        "workspaceDashboardUrl": "[uri(deployment().properties.templateLink.uri, '../nested/dashboard.json')]",
        "managedIdentityUrl": "[uri(deployment().properties.templateLink.uri, '../nested/managedIdentity.json')]",
        //"imageGalleryUrl": "[uri(deployment().properties.templateLink.uri, '../nested/imageGallery.json')]",
        "win10mageTemplateUrl": "[uri(deployment().properties.templateLink.uri, '../imageTemplates/windows10Evd.json')]",
        //"srv2019imageTemplateUrl": "[uri(deployment().properties.templateLink.uri, '../imageTemplates/windows2019.json')]",
        "rhel8imageTemplateUrl": "[uri(deployment().properties.templateLink.uri, '../imageTemplates/redhat8.json')]",
        "imageDefinitionUrl": "[uri(deployment().properties.templateLink.uri, '../nested/imageDefinition.json')]",
        "win10MofUrl": "[uri(deployment().properties.templateLink.uri, '../mof/Windows10v2r1/localhost.mof')]",
        "srv2019MofUrl": "[uri(deployment().properties.templateLink.uri, '../mof/WindowsServer2019v2r4/localhost.mof')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('rgLocation')]",
            "tags": {
                "Note": "subscription level deployment"
            },
            "properties": {}
        },
        {
            "name": "workspaceDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('workspaceUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('rgName')]"
                    }
                }
            }
        },
        {
            "name": "workspaceDashboardDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "workspaceDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('workspaceDashboardUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[reference('workspaceDeploy').outputs.workspaceName.value]"
                    }
                }
            }
        },
        {
            "name": "managedIdentityDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('managedIdentityUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('rgName')]"
                    }
                }
            }
        },
        {
            "name": "imageGalleryDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "managedIdentityDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "name": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "imageGalleryName": "[concat(replace(parameters('name'),'-',''), '_SIG')]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Compute/galleries",
                            "name": "[variables('imageGalleryName')]",
                            "apiVersion": "2019-03-01",
                            "location": "[resourceGroup().location]",
                            "properties": {},
                            "tags": {}
                        }
                    ],
                    "outputs": {
                        "galleryName": {
                            "type": "string",
                            "value": "[variables('imageGalleryName')]"
                        }
                    }
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('rgName')]"
                    }
                }
            }
        },
        {
            "name": "imageDefinitionsDeploy",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageGalleryDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('imageDefinitionUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    }
                }
            }
        },
        {
            "name": "windows10STIGtemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageDefinitionsDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('win10mageTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "identityId": {
                        "value": "[reference('managedIdentityDeploy').outputs.identityName.value]"
                    },
                    "mofUrl": {
                        "value": "[variables('win10MofUrl')]"
                    },
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    },
                    "workspaceName": {
                        "value": "[reference('workspaceDeploy').outputs.workspaceName.value]"
                    },
                    "imageTemplateName": {
                        "value": "Win10WVDw365_STIG"
                    },
                    "powerStigVersion": {
                        "value": "[parameters('powerStigVersion')]"
                    },
                    "stigVersion": {
                        "value": "2.1"
                    },
                    "osVersion": {
                        "value": "10"
                    }
                }
            }
        },
        {
            "name": "windows2019STIGtemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageDefinitionsDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "mofUrl": {
                            "type": "string"
                        },
                        "identityId": {
                            "type": "string"
                        },
                        "galleryName": {
                            "type": "string"
                        },
                        "workspaceName": {
                            "type": "string"
                        },
                        "imageTemplateName": {
                            "type": "string"
                        },
                        "powerStigVersion": {
                            "type": "string"
                        },
                        "stigVersion": {
                            "type": "string"
                        },
                        "osVersion": {
                            "type": "string"
                        },
                        "osRole": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "setPowerStigUrl": "https://raw.githubusercontent.com/jaxidian/project-stig/shanedev/scripts/setPowerStignoaudit.ps1",
                        "setAuditingStigUrl": "https://raw.githubusercontent.com/jaxidian/project-stig/shanedev/scripts/auditStig.ps1",
                        "wsResourceId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/',resourceGroup().name, '/providers/','Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    },
                    "resources": [
                        {
                            "name": "[parameters('imageTemplateName')]",
                            "type": "Microsoft.VirtualMachineImages/imageTemplates",
                            "apiVersion": "2020-02-14",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [

                            ],
                            "tags": {
                                "imagebuilderTemplate": "AzureImageBuilderSIG",
                                "userIdentity": "enabled"
                            },
                            "identity": {
                                "type": "UserAssigned",
                                "userAssignedIdentities": {
                                    "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('identityId'))]": {

                                    }
                                }
                            },
                            "properties": {
                                "buildTimeoutInMinutes": 100,
                                "vmProfile": {
                                    "vmSize": "Standard_D4_v5",
                                    "osDiskSizeGB": 127
                                },
                                "source": {
                                    "type": "PlatformImage",
                                    "publisher": "MicrosoftWindowsServer",
                                    "offer": "WindowsServer",
                                    "sku": "2019-datacenter-gensecond",
                                    "version": "latest"
                                },
                                "customize": [
                                    {
                                        "type": "PowerShell",
                                        "name": "setEnvVariables",
                                        "inline": [
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''WORKSPACE_ID'',''',reference(resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName')),'2017-03-15-preview').customerId,''',[System.EnvironmentVariableTarget]::Machine)')]",
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''WORKSPACE_KEY'',''',listKeys(variables('wsResourceId'), '2015-11-01-preview').primarySharedKey,''', [System.EnvironmentVariableTarget]::Machine)')]",
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''POWERSTIG_VER'',''',parameters('powerStigVersion'),''', [System.EnvironmentVariableTarget]::Machine)')]",
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''STIG_OSVER'',''',parameters('osVersion'),''', [System.EnvironmentVariableTarget]::Machine)')]",
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''STIG_OSROLE'',''',parameters('osRole'),''', [System.EnvironmentVariableTarget]::Machine)')]",
                                            "[concat('[System.Environment]::SetEnvironmentVariable(''STIG_VER'',''',parameters('stigVersion'),''', [System.EnvironmentVariableTarget]::Machine)')]"
                                        ]
                                    },
                                    {
                                        "type": "PowerShell",
                                        "name": "addFeatures",
                                        "inline": [
                                            "[if(contains(parameters('osRole'), 'DC'),'Install-WindowsFeature -Name AD-Domain-Services -IncludeManagementTools','get-windowsfeature')]"
                                        ]
                                    },
                                    {
                                        "type": "File",
                                        "name": "mofFileDownload",
                                        "sourceUri": "[parameters('mofUrl')]",
                                        "destination": "c:\\localhost.mof"
                                    },
                                    {
                                        "type": "File",
                                        "name": "AuditScriptDownload",
                                        "sourceUri": "[variables('setAuditingStigUrl')]",
                                        "destination": "c:\\auditStig.ps1"
                                    },
                                    {
                                        "type": "PowerShell",
                                        "name": "SetUpPowerStig",
                                        "runElevated": true,
                                        "scriptUri": "[variables('setPowerStigUrl')]"
                                    },
                                    {
                                        "type": "WindowsUpdate",
                                        "searchCriteria": "IsInstalled=0",
                                        "filters": [
                                            "exclude:$_.Title -like '*Preview*'",
                                            "include:$true"
                                        ],
                                        "updateLimit": 40
                                    },
                                    {
                                        "type": "WindowsRestart",
                                        "restartCommand": "shutdown /r /f /t 0",
                                        "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\azureImageBuilderRestart.txt",
                                        "restartTimeout": "2h"
                                    }
                                ],
                                "distribute": [
                                    {
                                        "type": "SharedImage",
                                        "galleryImageId": "[concat(resourceGroup().id,'/providers/Microsoft.Compute/galleries/',parameters('galleryName'),'/images/',parameters('imageTemplateName'),'/versions/',parameters('stigVersion'),'.1')]",
                                        "runOutputName": "[parameters('imageTemplateName')]",
                                        "artifactTags": {
                                            "source": "azureVmImageBuilder",
                                            "baseosimg": "WindowsServer"
                                        },
                                        "replicationRegions": [
                                            "usgovvirginia",
                                            "usgovarizona"
                                        ]
                                    },
                                    {
                                        "type": "VHD",
                                        "runOutputName": "Win2019gen2_STIG_V2R4"
                                    }
                                ]
                            }
                        }
                    ]
                },
                "parameters": {
                    "identityId": {
                        "value": "[reference('managedIdentityDeploy').outputs.identityName.value]"
                    },
                    "mofUrl": {
                        "value": "[variables('srv2019MofUrl')]"
                    },
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    },
                    "workspaceName": {
                        "value": "[reference('workspaceDeploy').outputs.workspaceName.value]"
                    },
                    "imageTemplateName": {
                        "value": "Win2019_STIG"
                    },
                    "powerStigVersion": {
                        "value": "[parameters('powerStigVersion')]"
                    },
                    "stigVersion": {
                        "value": "2.4"
                    },
                    "osVersion": {
                        "value": "2019"
                    },
                    "osRole": {
                        "value": "MS"
                    }
                }
            }
        },
        {
            "name": "redhatlinux8STIGtemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "imageDefinitionsDeploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('rhel8imageTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "identityId": {
                        "value": "[reference('managedIdentityDeploy').outputs.identityName.value]"
                    },
                    "galleryName": {
                        "value": "[reference('imageGalleryDeploy').outputs.galleryName.value]"
                    },
                    "workspaceName": {
                        "value": "[reference('workspaceDeploy').outputs.workspaceName.value]"
                    },
                    "imageTemplateName": {
                        "value": "Redhat8_STIG"
                    },
                    "powerStigVersion": {
                        "value": "[parameters('powerStigVersion')]"
                    },
                    "stigVersion": {
                        "value": "2.1"
                    },
                    "osVersion": {
                        "value": "8"
                    }
                }
            }
        }
    ],
    "outputs": {}
}